{
	"name": "dmdoc-comment-generator",
	"displayName": "dmdoc-comment-generator",
	"description": "Generates comments for dmdoc from procs, classes, variables and defines",
	"publisher": "dearmochi",
	"repository": "https://github.com/dearmochi/dmdoc-comment-generator",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.46.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:dm"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "dmdoc-comment-generator.genProcDoc",
				"title": "Generate proc documentation"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "dmdoc-comment-generator.genProcDoc",
					"when": "editorLangId == dm"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.46.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"comma-separated-tokens": "^1.0.8",
		"vsce": "^1.77.0"
	}
}
